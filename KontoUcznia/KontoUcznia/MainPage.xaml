<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KontoUcznia.MainPage">
    <StackLayout HorizontalOptions="Center">
        <Label Text="Zaloguj się" HorizontalOptions="Center" FontSize="30" TextColor="CadetBlue" Padding="50"/>
        <Label Text="Login" FontSize="15" TextColor="CadetBlue" FontAttributes="Bold" Margin="0,0,0,-10"/>
        <Entry />
        <Label Text="Hasło" FontSize="15" TextColor="CadetBlue" FontAttributes="Bold" Margin="0,20,0,-10"/>
        <Entry IsPassword="True"/>
        <Button Text="Zaloguj się" BackgroundColor="CadetBlue" CornerRadius="20" TextColor="White" HorizontalOptions="Center" WidthRequest="210" Margin="0,50,0,0"/>
        <Button Text="Zarejestruj się" BorderColor="CadetBlue" BackgroundColor="Transparent" BorderWidth="2" CornerRadius="20" TextColor="CadetBlue" HorizontalOptions="Center" WidthRequest="210" Margin="0,20,0,0"/>
    </StackLayout>

</ContentPage>
